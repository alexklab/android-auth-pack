<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/uidLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/iconImageView"
            app:layout_constraintTop_toTopOf="@id/iconImageView"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:text="UID:"/>

    <TextView
            android:id="@+id/uidTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@id/uidLabel"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/uidLabel"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            tools:text="Aas dfasdf asdf asdf sdfasdasdfdasfasfasdfasfasf"/>

    <TextView
            android:id="@+id/providerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/iconImageView"
            app:layout_constraintTop_toBottomOf="@id/uidLabel"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:text="Provider:"/>

    <TextView
            android:id="@+id/providerTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@id/providerLabel"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/providerLabel"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            tools:text="FIREBASE Aas dfasdf asdf asdf sdfasdasdfdasfasfasdfasfasf"/>

    <TextView
            android:id="@+id/creationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/iconImageView"
            app:layout_constraintTop_toBottomOf="@id/providerLabel"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:text="Created TS:"/>

    <TextView
            android:id="@+id/creationTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@id/creationLabel"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/creationLabel"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            tools:text="12341234 1324 132 "/>

    <TextView
            android:id="@+id/lastSignInLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/iconImageView"
            app:layout_constraintTop_toBottomOf="@id/creationLabel"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:text="Last SignIn TS:"/>

    <TextView
            android:id="@+id/lastSignInTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@id/lastSignInLabel"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/lastSignInLabel"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            tools:text="12341234 1324 132 "/>

    <ImageView
            android:id="@+id/iconImageView"
            android:layout_width="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@android:color/darker_gray"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_height="100dp"
            android:contentDescription="@null"/>

    <TextView
            android:id="@+id/emailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText"
            app:layout_constraintTop_toBottomOf="@id/nameTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:text="Email:"/>

    <TextView
            android:id="@+id/emailTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@id/emailLabel"
            app:layout_constraintStart_toEndOf="@id/emailLabel"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            tools:text="asdasd@adfadsf.com qwreqwer qwrewe rqwer qwe rqwer qwer "/>

    <TextView
            android:id="@+id/nameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/iconImageView"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:text="Name:"/>

    <TextView
            android:id="@+id/nameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/nameLabel"
            app:layout_constraintBaseline_toBaselineOf="@id/nameLabel"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            tools:text="ASD ASDF asdfasdf adsfdsfasdf asd fasd ads fads fas fsdf adsf das dsa  "/>

    <TextView
            android:id="@+id/phoneLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/emailVerifyTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Phone:"/>

    <TextView
            android:id="@+id/phoneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@id/phoneLabel"
            app:layout_constraintStart_toEndOf="@id/phoneLabel"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            tools:text="NULL"/>

    <TextView
            android:id="@+id/emailVerifyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText"
            app:layout_constraintTop_toBottomOf="@id/emailTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:text="Email verification: "/>

    <TextView
            android:id="@+id/emailVerifyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@id/emailVerifyLabel"
            app:layout_constraintStart_toEndOf="@id/emailVerifyLabel"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            tools:text="asd asdf sdaf "/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="16dp"
            android:id="@+id/providersRecyclerView"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/phoneTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/editProfileButton"
            android:layout_marginTop="16dp"
            android:layout_width="200dp"
            android:text="Edit Profile"
            app:layout_constraintTop_toBottomOf="@id/providersRecyclerView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText"/>

    <Button
            android:id="@+id/changePasswordButton"
            android:layout_width="200dp"
            android:text="Change password"
            app:layout_constraintTop_toBottomOf="@id/editProfileButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText"/>

    <Button
            android:id="@+id/logoutButton"
            android:layout_width="200dp"
            android:text="Logout"
            app:layout_constraintTop_toBottomOf="@id/changePasswordButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/colorAccent"
            tools:ignore="HardcodedText"/>

</androidx.constraintlayout.widget.ConstraintLayout>