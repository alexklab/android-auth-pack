<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:paddingStart="16dp"
        android:background="@color/browser_actions_bg_grey"
        android:layout_height="wrap_content">


    <ImageView
            android:id="@+id/iconImageView"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            android:contentDescription="@null"/>

    <TextView
            android:id="@+id/uidLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_toRightOf="@id/iconImageView"
            android:text="Uid:"/>

    <TextView
            android:id="@+id/uidTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:layout_toRightOf="@id/uidLabel"
            android:layout_alignBaseline="@id/uidLabel"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            tools:text="Aas dfasdf asdf asdf adsfasdadasdf asdf s"/>

    <TextView
            android:id="@+id/providerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_below="@id/uidTextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_toRightOf="@id/iconImageView"
            android:text="Provider:"/>

    <TextView
            android:id="@+id/providerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:layout_toRightOf="@id/providerLabel"
            android:layout_alignBaseline="@id/providerLabel"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            tools:text="Google asdfasdfasdfasdf   "/>

    <TextView
            android:id="@+id/nameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText"
            android:layout_marginTop="4dp"
            android:layout_below="@id/iconImageView"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:text="Name:"/>

    <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/nameLabel"
            android:layout_toRightOf="@id/nameLabel"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            tools:text="ASD ASDF asdfasdf adsfasdfdasfadsf "/>

    <TextView
            android:id="@+id/emailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_marginTop="4dp"
            android:layout_below="@id/nameTextView"
            android:text="Email:"/>

    <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:layout_toRightOf="@id/emailLabel"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_alignBaseline="@id/emailLabel"
            tools:text="asdasd@adfadsf.comqwerqweradsafasqwe"/>

    <TextView
            android:id="@+id/verifyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_marginTop="4dp"
            android:layout_below="@id/emailTextView"
            android:text="Email Verified:"/>

    <TextView
            android:id="@+id/verifyEmailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/verifyLabel"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@id/verifyLabel"
            android:layout_marginEnd="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            tools:text="FALSE qqw eqw    e  qw  qw e    qw e   "/>

    <TextView
            android:id="@+id/phoneLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_marginTop="4dp"
            android:layout_below="@id/verifyEmailTextView"
            android:text="Phone:"/>

    <TextView
            android:id="@+id/phoneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/phoneLabel"
            android:layout_toRightOf="@id/phoneLabel"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            tools:text="NULL qw rqwe rqwer qwer qwe werqwe "/>

    <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_centerVertical="true"
            android:layout_height="180dp"
            android:layout_alignParentEnd="true"
            android:background="@android:color/darker_gray"/>

</RelativeLayout>